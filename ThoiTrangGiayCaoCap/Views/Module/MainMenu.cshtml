@model IEnumerable<MyClass.Models.Menu>
<div class="top_nav_left">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse menu--shylock" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav menu__list">
                    @foreach (var menu in Model)
                    {
                        @Html.Action("MainMenuSub","Module", new {@id=menu.Id})
                    }
                </ul>
            </div>
        </div>
    </nav>
</div>
<div class="top_nav_right">
    <div class="cart box_1">
        <a href="~/gio-hang">
            <h3>
                <div class="total">
                    @{
                        int soluong = 0;
                        if (!System.Web.HttpContext.Current.Session["MyCart"].Equals(""))
                        {
                            List<CartItem> listcart = (List<CartItem>)System.Web.HttpContext.Current.Session["MyCart"];
                            soluong = listcart.Count();
                        }
                    }
                    <i class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></i>
                    (<span>@soluong</span> items)
                </div>
            </h3>
        </a>
        <p><a href="~/gio-hang" class="simpleCart_empty"> GIỎ HÀNG</a></p>

    </div>
</div>
<div class="clearfix"></div>
