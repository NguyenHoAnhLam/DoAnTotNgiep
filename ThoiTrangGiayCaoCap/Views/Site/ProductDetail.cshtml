@model MyClass.Models.Product

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<section class="maincontent clearfix">
    <div class="container my-3">
        <div class="row product-title" style="padding-bottom:20px;padding-top:40px">
            <div class="col-md-6">
                <img src="~/Public/images/Products/@Model.Img" class="img-fluid card-img-top" alt="@Model.Name" />
            </div>
            <div class="col-md-6">
                <h1 class="product-title text-center" style="color:#0ce605;padding-bottom:30px">@Model.Name</h1>
                <h4 style="padding-bottom:15px">Giá Khuyến Mãi:  &emsp; @string.Format("{0:0,0}", @Model.Pricesale) <sup>đ</sup> </h4>
                <h4 style="padding-bottom:15px">Giá Gốc:     &emsp; <del class="text-danger">@string.Format("{0:0,0}", @Model.Price)</del><sup>đ</sup></h4>
                <h4>Số Lượng:     &emsp; @Model.Number</h4>
            </div>

        </div>
        <div class="row product-detail">
            <h3 style="color:#0ce605">CHI TIẾT SẢN PHẨM</h3>
            <p style="padding-bottom:20px;padding-top:20px">@Html.Raw(Model.Detail)</p>
        </div>
        <div class="row product-detail" style="margin:20px">
            <h3 style="color:#0ce605">BÌNH LUẬN</h3>
            <div class="fb-comments" data-href="https://localhost:44357/@Model.Slug" data-width="1200" data-numposts="10"></div>       
        </div>
        <div class="row product-detail">
            <h3 style="color:#0ce605">SẢN PHẨM CÙNG LOẠI</h3>
            <section class="content3">
                <!-- product-nav -->

                <div class="product-easy">
                    <div class="container">
                        <script src="~/Public/js/easyResponsiveTabs.js"></script>
                        <script src="~/Public/js/easyResponsiveTabs.js" type="text/javascript"></script>
                        <script type="text/javascript">
                            $(document).ready(function () {
                                $('#horizontalTab').easyResponsiveTabs({
                                    type: 'default', //Types: default, vertical, accordion
                                    width: 'auto', //auto or any width like 600px
                                    fit: true   // 100% fit in a container
                                });
                            });

                        </script>
                        <div class="sap_tabs">
                            <div id="horizontalTab" style="display: block; width: 100%; margin: 0px;">
                                <div class="contanier">
                                    @foreach (var proother in ViewBag.ListOther)
                                    {
                                        <div class="col-md-3 product-men" style="margin-bottom:30px">
                                            <div class="men-pro-item simpleCart_shelfItem">

                                                <div class="men-thumb-item">
                                                    <img src="~/Public/images/Products/@proother.Img" alt="" class="pro-image-front">
                                                    <img src="~/Public/images/Products/@proother.Img" alt="" class="pro-image-back">
                                                    <div class="men-cart-pro">
                                                        <div class="inner-men-cart-pro">
                                                            <a href="~/@proother.Slug" class="link-product-add-cart">XEM SẢN PHẨM</a>
                                                        </div>
                                                    </div>
                                                    <span class="product-new-top">New</span>

                                                </div>
                                                <div class="item-info-product ">
                                                    <h4><a href="~/@proother.Slug">@proother.Name</a></h4>
                                                    <div class="info-product-price">
                                                        <span class="item_price">@string.Format("{0:0,0}", proother.Pricesale) <sup>đ</sup></span>
                                                        <del class="text-danger">@string.Format("{0:0,0}", proother.Price)</del><sup>đ</sup>
                                                    </div>
                                                    <a href="@Url.Action("CartAdd","Giohang",new { productid = proother.Id})" class="item_add single-item hvr-outline-out button2 text-uppercase">
                                                        <i class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></i> Mua
                                                    </a>
                                                </div>

                                            </div>
                                        </div>
                                    }
                                    <div class="clearfix"></div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container" style="margin-top:40px">
                        <div class="row">
                            <div class="col-md-8">
                            </div>
                            <div class="col-md-4">
                                <a href="~/tat-ca-san-pham" style="color:#069191;font-size:20px">
                                    XEM TOÀN BỘ SẢN PHẨM
                                    <i class="glyphicon glyphicon-arrow-right" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- //product-nav -->

            </section>
        </div>

    </div>
</section>

