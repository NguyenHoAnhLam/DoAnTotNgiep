@model IEnumerable<MyClass.Models.PostInfo>
    @{ 
        var topic = ViewBag.Topic;
    }
@{
    ViewBag.Title = topic.Name;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<section class="maincontent clearfix">
    <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <div class="post-title position-relative">
                    <h2 class="text-center" style="padding-bottom:30px;padding-top:20px;color:#0ce605;font-weight:700">@topic.Name</h2>
                </div>
                @foreach (var post in Model)
                {
                    <div class="row" style="margin-bottom:40px;">
                        <div class="col-md-6">
                            <a href="~/@post.Slug"><img src="~/Public/images/Post/@post.Img" class="img-fluid" /></a>
                        </div>
                        <div class="col-md-6">
                            <h3 class="text-center" style="color:red;padding-bottom:10px"><a href="~/@post.Slug">@post.Title</a></h3>
                            <p>@XString.Str_Limit(post.Detail, 500)</p>
                            <div class="text-right"><a href="~/@post.Slug">Xem Thêm</a></div>
                        </div>
                    </div>

                }
            </div>
            <div class="container" style="margin-top:40px;margin-bottom:30px">
                <div class="row">
                    <div class="col-md-8">
                    </div>
                    <div class="col-md-4">
                        <a href="~/tat-ca-bai-viet" style="color:#069191;font-size:20px">
                            XEM TOÀN BỘ BÀI VIẾT
                            <i class="glyphicon glyphicon-arrow-right" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

