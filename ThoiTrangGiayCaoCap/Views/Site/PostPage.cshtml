@model MyClass.Models.Post

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}


<section class="maincontent clearfix">
    <div class="container my-3">
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <h1 class="title-post text-center" style="padding-bottom:40px;padding-top:40px;color:#0ce605;font-weight:700">@Model.Title</h1>
                <div class="row" style="margin-bottom:40px">
                    <div class="col-md-5">
                        <img src="~/Public/images/Post/@Model.Img" />
                    </div>
                    <div class="col-md-7">
                        <p>@Html.Raw(Model.Detail)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

