@model IEnumerable<MyClass.Models.User>

@{
    ViewBag.Title = "Thùng Rác User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header {
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer {
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">


    <!-- Main content -->
    <section class="content my-3">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger">THÙNG RÁC LIÊN HỆ</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Index","User")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i>Trở Về Danh Sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @Html.Partial("Message")
                <table class="table table-bordered table-striped" id="myTable">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:20px">#</th>
                            <th>
                                Họ Tên User
                            </th>
                            <th>
                                Tên Đăng Nhập
                            </th>
                            <th>
                                Số Điện Thoại
                            </th>
                            <th>
                                Kiểu User
                            </th>

                            <th>
                                Email
                            </th>
                            <th class="text-center" style="width:180px">Chức Năng</th>
                            <th class="text-center" style="width:20px">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="checkid" value="" /></td>
                                <td>
                                    @item.Fullname
                                </td>
                                <td>
                                    @item.UserName
                                </td>
                                <td>
                                    @item.Phone
                                </td>
                                <td>
                                    @item.Roles
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    <a href="@Url.Action("ReTrash","User",  new { id = item.Id })" class="btn btn-sm btn-primary"><i class="fas fa-undo"></i></a>
                                    <a href="@Url.Action("Delete","User", new { id = item.Id })" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                                <td>@item.Id</td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
