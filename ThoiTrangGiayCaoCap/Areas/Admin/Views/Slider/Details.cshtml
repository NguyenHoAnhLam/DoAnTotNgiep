@model MyClass.Models.Slider

@{
    ViewBag.Title = "Chi Tiết Slider";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">


    <!-- Main content -->
    <section class="content my-3">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong>CHI TIẾT SLIDER</strong>
                    </div>
                    <div class="col-md-6 text-right">
                        <a href="@Url.Action("Edit","Slider",  new { id = Model.Id })" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i>Cập Nhật</a>
                        <a href="@Url.Action("Index","Slider")" class="btn btn-sm btn-info"><i class="fas fa-long-arrow-alt-left"></i>Trở Về Danh Sách</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th style="width:120px;color:red;text-align:center">Tiêu Đề</th>
                        <th style="color:green;text-align:center">Nội Dung</th>
                    </tr>
                    <tr>
                        <td>
                            Tên Slider
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Hình Ảnh</strong>
                        </td>
                        <td style="width:80px;">
                            <img src="~/Public/images/Slider/@Model.Img" class="img-fluid" alt="#" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Tên Link
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Link)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Position)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Position)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Thứ Tự
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Orders)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Từ Khóa
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Metakey)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Mô Tả
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Metadesc)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ngày Tạo
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Create_At)
                        </td>
                    <tr>
                        <td>
                            Người Tạo
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Create_By)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Ngày Cập nhật
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Update_At)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Người Cập nhật
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Update_By)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Status)
                        </td>
                        <td>@Html.DisplayFor(model => model.Status)</td>
                    </tr>
                </table>
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
